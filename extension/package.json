{
  "name": "qrtuber-extension",
  "description": "QRTuber Browser Extension for Chrome/Firefox",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
